<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>SmartFoodCourtSystem</display-name>
  <welcome-file-list>
    <welcome-file>welcome.html</welcome-file>
  </welcome-file-list>
  
  <servlet>
  	<servlet-name>login</servlet-name>
  	<jsp-file>/pages/login.jsp</jsp-file>
  </servlet>
   <servlet>
  	<servlet-name>signup</servlet-name>
  	<jsp-file>/pages/signup.jsp</jsp-file>
  </servlet>
  <servlet>
  	<servlet-name>customer-main</servlet-name>
  	<jsp-file>/pages/customer/main.jsp</jsp-file>
  </servlet>
  <servlet>
  	<servlet-name>cook-main</servlet-name>
  	<jsp-file>/pages/cook/main.jsp</jsp-file>
  </servlet>
  <servlet>
  	<servlet-name>fcmanager-main</servlet-name>
  	<jsp-file>/pages/foodcourtmanager/main.jsp</jsp-file>
  </servlet>
  <servlet>
  	<servlet-name>it-main</servlet-name>
  	<jsp-file>/pages/it/main.jsp</jsp-file>
  </servlet>
  <servlet>
  	<servlet-name>vdowner-main</servlet-name>
  	<jsp-file>/pages/vendorowner/main.jsp</jsp-file>
  </servlet>
   <servlet>
  	<servlet-name>test</servlet-name>
  	<servlet-class>com.foodcourt.test.TestServlet</servlet-class>
  </servlet>
  <servlet>
  <servlet-name>viewOrder</servlet-name>
  <jsp-file>/pages/cook/view_order.jsp</jsp-file>
  </servlet>
    <servlet>
  <servlet-name>viewPaidOrder</servlet-name>
  <jsp-file>/pages/customer/view_paidorder.jsp</jsp-file>
  </servlet>
  <servlet>
  	<servlet-name>digitalSlip</servlet-name>
  	<jsp-file>/pages/customer/digital_slip.jsp</jsp-file>
  </servlet>
  
  <filter>
  	<filter-name>cook-filter</filter-name>
  	<filter-class>com.foodcourt.filter.CookFilter</filter-class>
  </filter>
    <filter>
  	<filter-name>customer-filter</filter-name>
  	<filter-class>com.foodcourt.filter.CustomerFilter</filter-class>
  </filter>
    <filter>
  	<filter-name>fcmanager-filter</filter-name>
  	<filter-class>com.foodcourt.filter.FCManagerFilter</filter-class>
  </filter>
    <filter>
  	<filter-name>it-filter</filter-name>
  	<filter-class>com.foodcourt.filter.ItFilter</filter-class>
  </filter>
    <filter>
  	<filter-name>vdowner-filter</filter-name>
  	<filter-class>com.foodcourt.filter.VDOwnerFilter</filter-class>
  </filter>
  
  <servlet-mapping>
  	<servlet-name>login</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>signup</servlet-name>
  	<url-pattern>/signup</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>customer-main</servlet-name>
  	<url-pattern>/customer/main</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>cook-main</servlet-name>
  	<url-pattern>/cook/main</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>fcmanager-main</servlet-name>
  	<url-pattern>/fcmanager/main</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>it-main</servlet-name>
  	<url-pattern>/it/main</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>vdowner-main</servlet-name>
  	<url-pattern>/vdowner/main</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
  	<servlet-name>test</servlet-name>
  	<url-pattern>/test</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>viewOrder</servlet-name>
  	<url-pattern>/cook/view_orderJSP</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
  	<servlet-name>viewPaidOrder</servlet-name>
  	<url-pattern>/customer/view_paidorderJSP</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>digitalSlip</servlet-name>
  	<url-pattern>/customer/digitalSlip</url-pattern>
  </servlet-mapping>
  
  <filter-mapping>
  	<filter-name>cook-filter</filter-name>
  	<url-pattern>/cook/*</url-pattern>
  </filter-mapping>
    <filter-mapping>
  	<filter-name>customer-filter</filter-name>
  	<url-pattern>/customer/*</url-pattern>
  </filter-mapping>
    <filter-mapping>
  	<filter-name>fcmanager-filter</filter-name>
  	<url-pattern>/fcmanager/*</url-pattern>
  </filter-mapping>
    <filter-mapping>
  	<filter-name>it-filter</filter-name>
  	<url-pattern>/it/*</url-pattern>
  </filter-mapping>
    <filter-mapping>
  	<filter-name>vdowner-filter</filter-name>
  	<url-pattern>/vendorowner/*</url-pattern>
  </filter-mapping>
  
</web-app>